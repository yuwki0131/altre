export struct ModeLineData {
    label: string,
    cursor_line: int,
    cursor_column: int,
    total_lines: int,
    is_modified: bool,
}

export component ModeLineView inherits Rectangle {
    in property <ModeLineData> data;

    height: 28px;
    background: #303030;

    HorizontalLayout {
        padding: 4px;
        spacing: 12px;

        Text {
            text: {
                if (root.data.is_modified) {
                    "* " + root.data.label
                } else {
                    "  " + root.data.label
                }
            };
            color: #f8f8f2;
            font-family: "monospace";
            font-size: 12px;
        }

        Text {
            text: "Ln " + root.data.cursor_line + ", Col " + root.data.cursor_column;
            color: #d0d0d0;
            font-family: "monospace";
            font-size: 12px;
        }

        Text {
            text: root.data.total_lines + " lines";
            color: #909090;
            font-family: "monospace";
            font-size: 12px;
        }

        Rectangle { width: 1px; height: parent.height; background: #505050; }

        Text {
            text: "GUI";
            color: #808080;
            font-family: "monospace";
            font-size: 12px;
        }
    }
}
